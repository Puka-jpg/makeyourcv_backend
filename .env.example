#dev or prod or local
ENV=

# 1 or 0
DEBUG=

# Database
DB_URL=
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# Gunicorn
GUNICORN_WORKERS=
GUNICORN_THREADS=
GUNICORN_ACCESS_LOG=
GUNICORN_ERROR_LOG=



GOOGLE_GENAI_USE_VERTEXAI=
GOOGLE_API_KEY=
OPENROUTER_API_KEY=
OPENAI_API_KEY=

# MCP Settings
# MCP_MODE: "local" (stdio), "remote" (SSE), or "disabled"
MCP_MODE=local

# Remote mode settings (SSE)
RENDER_CV_MCP_URL=http://localhost:9000/sse/

# Local mode settings (stdio - spawns subprocess)
RENDER_CV_MCP_COMMAND=uv
RENDER_CV_MCP_ARGS=run,--frozen,--all-extras,python,rendercv/mcp/server.py
RENDER_CV_MCP_CWD=/path/to/rendercv/rendercv
